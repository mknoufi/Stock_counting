# MongoDB Configuration
MONGO_URL=mongodb://username:password@mongodb-server:27017/stock_count?authSource=admin
DB_NAME=stock_count

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_32_CHARS_MIN
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# SQL Server Configuration (ERP System)
SQL_SERVER_HOST=your-erp-server.company.com
SQL_SERVER_PORT=1433
SQL_SERVER_DATABASE=E_MART_KITCHEN_CARE
SQL_SERVER_USER=readonly_user
SQL_SERVER_PASSWORD=CHANGE_THIS_PASSWORD

# Redis Configuration (REQUIRED for production)
REDIS_URL=redis://username:password@redis-server:6379/0

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=production
APP_NAME=Stock Count API
APP_VERSION=2.0.0

# Security Settings
FORCE_HTTPS=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
MAX_CONCURRENT=100
BLOCK_SANITIZATION_VIOLATIONS=true

# CORS Settings (Production domains only)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com,https://www.yourdomain.com

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_AGE=300

# Request Limits
MAX_REQUEST_SIZE_MB=10
REQUEST_TIMEOUT_SECONDS=30

# Database Connection Pool
USE_CONNECTION_POOL=true
POOL_SIZE=20
MAX_OVERFLOW=10

# ERP Sync Configuration
ERP_SYNC_ENABLED=false
ERP_SYNC_INTERVAL=3600

# Monitoring & Logging
METRICS_HISTORY_SIZE=10000
LOG_FORMAT=json
LOG_FILE=/var/log/stock_count/app.log

# Sentry (Error Tracking) - Optional
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Email Notifications - Optional
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Feature Flags
ENABLE_MFA=false
ENABLE_AUDIT_LOG=true
ENABLE_METRICS=true
ENABLE_PROFILING=false
